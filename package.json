{
  "name": "react-layered-boilerplate",
  "version": "0.1.0",
  "description": "React Layered Architecture Boilerplate",
  "author": "Tiago Vilas Boas (Montanha) - tiago.vilasboas@dextra-sw.com",
  "license": "GPLv3",
  "scripts": {
    "build": "npm run clean-dist && webpack --config=configs/webpack/prod.js",
    "clean-dist": "rimraf dist/*",
    "lint": "eslint './src/**/*.{js,ts,tsx}' --quiet && tsc --project tsconfig.json",
    "lint:fix": "eslint './src/**/*.{js,ts,tsx}' --fix",
    "start": "npm run dev",
    "dev": "webpack serve --config=configs/webpack/dev.js",
    "prod": "npm run build && node ./express.js",
    "test:dev": "jest --coverage --watchAll",
    "test": "jest --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.5",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.34",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-jest": "^27.0.2",
    "css-loader": "^5.2.6",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "express": "^4.17.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "styled-components": "^5.3.0",
    "styled-normalize": "^8.0.7",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
