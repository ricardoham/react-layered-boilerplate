{
  "rootDir": "..",
  "roots": ["<rootDir>/src/"],
  "testEnvironment": "jsdom",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{ts,tsx}",
    "!<rootDir>/src/pages/index.{ts,tsx}",
    "!**/*.d.ts"
  ],
  "setupFiles": ["<rootDir>/configs/tests/__mocks__/shim.js"],

  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": 
    "<rootDir>/configs/tests/__mocks__/fileMock.js",
    "\\.(css)$": "<rootDir>/configs/tests/__mocks__/styleMock.js"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "transformIgnorePatterns": ["/node_modules/"],
  "moduleDirectories": ["node_modules"],
  "globals": {
    "DEVELOPMENT": false,
    "FAKE_SERVER": false
  }
}
